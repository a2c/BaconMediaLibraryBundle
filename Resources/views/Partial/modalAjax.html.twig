<div class="modal {{ theme_modal }} fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title" id="myModalLabel">{{ upload_title_modal }}</h4>
			</div>
			<div class="modal-body">

				<div id="progress" class="progress">
					<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
						<span class="sr-only">100% Complete (success)</span>
					</div>
				</div>

        <div id="list_uploads">
  				<div class="row">

  					{% for item in pagination %}

  						<div class="col-md-4">
  							<div class="thumbnail">
  								<a href="{{ item.name| imagine_filter('original') }}" class="fancybox">
  									<img class="media-object" src="{{ item.name| imagine_filter('thumb_from_original') }}" alt="{{ item.originalName }}" width="120" class="img-responsive">
  								</a>

  								<div class="caption">
  									<h4 class="thumbnail-title text-center">{{ item.originalName }}</h4>

  									<div class="btn-group btn-group-justified">
  										<div class="btn-group">
  											<label class="btn btn-default">
  												<input type="radio" name="select_image" class="value_image_select" value="{{ item.id }}" data-id="{{ item.id }}" data-src="{{ item.name| imagine_filter('thumb_from_original') }}">
  												Selecionar
  											</label>
  										</div>

  										<div class="btn-group">
  											<button class="btn btn-danger remove_upload_modal">
  												<span class="glyphicon glyphicon-remove-circle"></span>
  												Remover
  											</button>
  										</div>
  									</div>
  								</div>
  							</div>
  						</div>

  					{% endfor %}

  				</div>

  				<nav aria-label="Page navigation">
  					{{ knp_pagination_render(pagination) }}
  				</nav>

        </div>
			</div>

			<div class="modal-footer">
				<button type="button" class="{{ theme_button_footer_class_close }} pull-left" data-dismiss="modal">Close</button>

				<span class="btn {{ theme_button_class }} fileinput-button">
					<span class="{{ theme_icon_upload }}"></span>
					Add
					<input id="fileupload" type="file" name="files" data-url="{{ oneup_uploader_endpoint('gallery') }}">
				</span>
				<button type="button" class="{{ theme_button_footer_class_selected }}" id="return_value_save">Select</button>
			</div>
		</div>
	</div>
</div>